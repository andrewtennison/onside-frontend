		<@ if(img) { @><img src="<@= img @>" /><@ } @>
		<h1><@= name @></h1>
	</a>
</script>

<script id="eventItemTemplate" class="tmpl" type="text/template">
	<a href="#">
		<img src="/i/placeholder/listIcon2.png" />
		<h1><@= name @></h1>
	</a>
</script>

<script id="savedSearchTemplate" class="tmpl" type="text/template">
