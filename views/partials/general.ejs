<!-- // DETAIL ITEM TEMPLATES // -->
<script id="detailTemplate" class="tmpl" type="text/template">
	<header class="detailHead bb shadows">
		<h1>
			<img class="badge" src="<@= image @>" />
			<@= title @>
		</h1>
		<nav>
			<!--a class="refresh" href="#">refresh</a-->
			<% if (everyauth.loggedIn) { %>
			<@ var saveClass = (saved)? 'active' : ''; @>
			<a class="save <@= saveClass @>" href="#"><span class="icon save">save</span></a>
			<% } else { %>
			<a class="login" href="#"><span class="icon login"></span>login to save</a>
			<% } %>
			<a class="filter" href="#"><span class="icon filter">filter</span></a>
		</nav>
		<span class="brandStripe"></span>
	</header>
	
	<div class="contentWrapper">
		<div class="scroller"></div><!-- /.scroller -->
	</div>
</script>

