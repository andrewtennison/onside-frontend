<nav>
	<div class="inner">
		<!--a href="">Help</a>
		<a href="">Support</a>
		<a href="">Contact Us</a>
		<a href="">FAQ</a-->
		<% if(everyauth.loggedIn) { %>
			<a href="/logout">Sign out</a>
		<% } else { %>
			<a href="/signup">Not got an invite yet - register to join onside</a>
		<% } %>
	</div>
</nav>

<header>
	<div class="inner">
		<article id="signupOpts">
			<hgroup>
				<h1>Onside Beta</h1>
				<h2>Delivering Fans Personalised Sport Content</h2>
				<p>Available to all early 2012</p>
			</hgroup>
			<article>
				<h1>Login to Onside</h1>

				<div class="notForIE6">
					<form action="/enter" method="post" id="signin">
					    <% if('undefined' !== typeof errors && errors.length) { %>
					        <ul id="errors">
					            <% errors.forEach(function(error) { %>
					                <li class="error"><%= error %></li>
					            <% }); %>
					        </ul>
					    <% } %>
					    <fieldset>
						    <input type="email" class="txt" name="<%=everyauth.password.loginFormFieldName%>" value="<%=locals[everyauth.password.loginFormFieldName] || ''%>" placeholder="enter your email" />
							<input type="password" class="txt" name="<%=everyauth.password.passwordFormFieldName%>" value="" placeholder="enter your password" />
							<input type="submit" class="submit" value="enter" />
						</fieldset>
					</form>
					<p>if you have already associated your social networks you can login with:</p>
					<a class="joinF social" href="/auth/facebook">facebook</a>
					<a class="joinT social" href="/auth/twitter">twitter</a>
				</div>

				<div class="forIE6">
					<p>You appear to be using IE6. This now 11 years old and is not supporoted by Onside, please signup using a more recent browser such as <a href="https://www.google.com/chrome">Chrome</a> or <a href="http://www.mozilla.org/en-US/firefox/new/">firefox</a>.</p>
				</div>
			</article>

		</article>
		<article id="devices">
			<div class="d_iphone">available on mobile devices</div>
			<div class="d_ipad">available on tablet devices</div>
			<div class="d_desktop">available on desktop</div>
		</article>

	</div>
</header>
<section id="reasons">
	<div class="inner">
	</div>
</section>

<footer>
	<div class="inner">
		<small>&copy; Onside Media</small>
	</div>
</footer>

