script#articleTemplate.tmpl(type="text/template")
	\<% if(images) { %> <img src='<%= images %>' /> <% } %>

	\<% if(extended) { %> <a class="readMore button" href="#">read more</a> <% } %>
	
	\<% if(publish) { %> <time> <%= publish %> </time> <% } %>

	h2 <%= title %>
	p <%= content %>
	\<a href='<%= link %>'>@ <%= source %></a>

script#articleTemplate-twitter.tmpl(type="text/template")
	cite <%= author %>
	p <%= content %>
	\<%= link %>

script#articleTemplate-youtube.tmpl(type="text/template")
	h2 <%= author %>: <%= title %>
	p <%= content %>
	\<input type="hidden" value="<%= link %>" name="videoData" />
	\<% if(publish) { %> <time> <%= publish %> </time> <% } %>
	\<a href='<%= videos %>'>see video</a>

script#articleDetail.tmpl(type="text/template")
	header
		h1 <%= title %>
		nav
			span.buttonGroup
				a.share(href="#") share
				a.save(href="#") save
		
		\<% if(images) { %> <img src='<%= images %>' /> <% } %>
		div <%= extended %>

script#commentTemplate.tmpl(type="text/template")
	p <%= comment %>

	\<% if(user) { %> <a href='/user/<%= user %>' > user id: <%= user %> </a> <% } %>
	\<% if(added) { %> <time> <%= added %> </time> <% } %>
	
	nav
		a.reply(href="#") reply

