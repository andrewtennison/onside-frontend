
section#OnsideApp
	div#main(role='main')
		section.page#listGroups
			header
				hgroup
					- if (everyauth.loggedIn)
						h1= everyauth.user.name
					- else
						h1 #{title}



				nav
					span.buttonGroup
						- if (everyauth.loggedIn)
							a.account.toggleBlock(href="#navAccounts") profile
						-else 
							a.login.toggleBlock(href="#navLogin") Sign In
					
					a.filter.button.toggleBlock(href="#navFilters") filter
				
				- if (everyauth.loggedIn)
					div#navAccounts.block
							a.logout(href="/logout") Sign out
							p= JSON.stringify(everyauth.user)

				-else
					div#navLogin.block
						a(href='/register') Register
						a(href='/login', style='border: 0px') Login with Password					
						
						a(href='/register') Register
						br
						
						a(href='/login', style='border: 0px') Login with Password
						br
						
						a.fb_button_medium(href='/auth/facebook')
							span#fb_login_text.fb_button_text
							Connect with Facebook
						br
						a(href='/auth/twitter')
							img(src='https://si0.twimg.com/images/dev/buttons/sign-in-with-twitter-l.png')
						br
						
						a(href='/auth/google')
							img(style='border: 0px', src='https://www.google.com/favicon.ico')

				div#navFilters.block
					p filter options

				div#navSearch.block
					form(action="/search")
						input#groupSearch(type="search", placeholder="search", name="q")

			section.content

			footer
				nav
					a.settings.icon(href="#") settings
					a.toggleList.toggleButton(href="#")
						span.channel channels
						span.event events

		section.page#listDetail
		
		section.page#detailArticle
		
		section.page#listChat
			header
				h1
					span 0
					Chatter
				
				nav
					a.button.filter(href="#") filter
					a.button.add(href="#") Add

				div.addBlock
					form(action="/")
						input#commentAdd(type="text", placeholder="add your comment")

			section.content

			footer
				a(href="#") SEE MORE DISCUSSIONS



// templates
script#channelListTemplate.tmpl(type="text/template")
	h1 <%= name %>

script#eventListTemplate.tmpl(type="text/template")
	h1 <%= name %>

script#detailTemplate.tmpl(type="text/template")
	header
		h1 <%= title %>
		nav
			span.buttonGroup
				a.filter(href="#") filter page
				a.refresh(href="#") refresh
				
			a.button.close(href="#") close

script#articleTemplate.tmpl(type="text/template")
	\<% if(images) { %> <img src='<%= images %>' /> <% } %>

	\<% if(extended) { %> <a class="readMore button" href="#">read more</a> <% } %>
	
	\<% if(publish) { %> <time> <%= publish %> </time> <% } %>

	h2 <%= title %>
	p <%= content %>
	\<a href='<%= link %>'>@ <%= source %></a>

script#articleTemplate-twitter.tmpl(type="text/template")
	cite <%= author %>
	p <%= content %>
	\<%= link %>

script#articleDetail.tmpl(type="text/template")
	header
		h1 <%= title %>
		nav
			span.buttonGroup
				a.share(href="#") share
				a.save(href="#") save
		
		\<% if(images) { %> <img src='<%= images %>' /> <% } %>
		div <%= extended %>

script#commentTemplate.tmpl(type="text/template")
	p <%= comment %>
	time <%= added %>
	\<a href='/user/<%= user %>'> <%= user %> </a>
	
	nav
		a.reply(href="#") reply





